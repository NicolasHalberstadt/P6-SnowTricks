{% extends 'base.html.twig' %}
{% block body %}
    <h1>Welcome to the home page </h1>

    {% if user %}
        <h2>You are logged in as {{ user.username }}</h2>
        <a href="/logout">Logout ?</a>
        {% else %}
            <h2>You are not logged in</h2>
            <a href="/login">login</a>
            <a href="/register">register</a>
    {% endif %}
{% endblock %}